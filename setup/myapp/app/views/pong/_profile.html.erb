<script type="text/template" name="userProfile">
    <p class="h2 text-primary text-center">User Profile</p>

    <div class="row">
        <div class="col-sm-4 text-center">
            <img class="rounded-circle img-fluid" id="user-avatar-img" src="<%%= user.avatar.medium.url %>"/>

            <%% if ($('html').data().userId === user.id) { %>
                <%= form_tag update_user_avatar_url(current_user), id: 'avatar-form', :method => :post, multipart: true, remote: true do %>
                    <%= file_field :user, :avatar , accept: 'image/png,image/jpeg,image/jpg', id: 'avatarFileInput' %>
                    <%= submit_tag "Save Avatar", class: 'btn btn-success' %>
                <% end %>
            <%% } %>
        </div>
        <div class="col-6">
            <div class="row">
                <div class="col-6">
                    <p class="h3 text-info">Nickname</p>
                </div>
                <div class="col-4 text-center">
                    <h4 id="user-nickname"><%%= user.nickname %> </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p class="h3 text-info">Score</p>
                </div>
                <div class="col-4 text-center">
                    <h4 id="user-nickname"><%%= user.score %> </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p class="h3 text-info">Matches</p>
                </div>
                <div class="col-4 text-center">
                    <h4 id="user-nickname"><%%= user.matches_won + user.matches_lost %> </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p class="h3 text-info">Matches won</p>
                </div>
                <div class="col-4 text-center">
                    <h4 id="user-nickname"><%%= user.matches_won %> </h4>
                </div>
            </div>
            <div class="row">
                <div class="col-6">
                    <p class="h3 text-info">Matches lost</p>
                </div>
                <div class="col-4 text-center">
                    <h4 id="user-nickname"><%%= user.matches_lost %> </h4>
                </div>
            </div>
        </div>
    </div>
    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();
                
                reader.onload = function(e) {
                $('#user-avatar-img').attr('src', e.target.result);
                }
                
                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }
        $("#avatarFileInput").change(function() {
            readURL(this);
        });
    </script>
</script>