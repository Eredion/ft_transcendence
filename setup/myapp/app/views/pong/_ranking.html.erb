</script>

<script id="tournament-list-template" type='text/template'>
    <div class="list-group mb-6">
    <%% for (let tournament of tournaments) {%>
        <%% if (tournament.status == "open"){ %>
            <div href="#tournament/<%%= tournament.id %>" class="list-group-item-action bg-success text-white p-2 text-center">"<%%= tournament.name %>" 
                <span>
                    <a href='#play' class="badge badge-sm badge-danger fire-animation">Open</a>
                </span>
            </div>
        <%% } %>
        <%% if (tournament.status == "active"){ %>
            <div href="#tournament/<%%= tournament.id %>" class="list-group-item-action bg-primary text-white p-2 text-center">"<%%= tournament.name %>" 
                <span>
                    <a href='#play' class="badge badge-sm badge-danger fire-animation">Play now</a>
                </span>
            </div>
            <div id='current-tournament-ranking'></div>
        <%% } %>
    <%% }%>
    <%% for (let tournament of tournaments) {%>
        <%% if (tournament.status == "finished"){ %>
            <a href="#tournament/<%%= tournament.id %>" class="list-group-item-action bg-dark text-white p-2 text-center">"<%%= tournament.name %>" 
                <span>
                    <div class="badge badge-sm badge-light">Finished</div>
                </span>
            </a>
        <%% } %>
    <%% }%>
    </div>
</script>

