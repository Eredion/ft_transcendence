<% if current_user.admin == true %>
<script type="text/template" name="admin" id="admin-template">
    <div>
        <h1 class="title">Admin control panel</h1>
    </div>
    <div id="tournament-creator-interface">
        <div class="form-group">
        <%= form_with url: "api/tournaments", method: :create do |f| %>
            <%= text_field(:tournament, :name ,minlenght: 1, maxlenght: 20,
                placeholder: "Choose a name...", autocomplete: :off, id: "input-trnmnt-form") %>
            <%= f.select(:size, options_for_select([["2", 2], ["4", 4], ["8", 8]]), {:include_blank => false}) %>
            <%= f.submit "Create tournament", id: "create-tournament-button", class: "btn btn-dark" %>

        <% end %>
        </div>
    </div>
    <div id="admin-user-grid">
        <%% for (let user of users){ %>
            
                <div class="admin-user-el bg-white">
                    <p><%%= user.nickname %></p>
                    <span>
                        <%% if (user.banned === false) { %>
                        <div class="ban-user-button btn btn-danger" data-nickname="<%%=user.nickname%>" data-user="<%%=user.id %>">BAN</div>

                        <%% } else { %>
                        <div class="unban-user-button btn btn-success" data-nickname="<%%=user.nickname%>" data-user="<%%=user.id %>">UNBAN</div>

                        <%% } %>
                    </span>
                </div>

        <%% }%>
    </div>
</script>

<%  end %>