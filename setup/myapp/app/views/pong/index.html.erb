
<%# User is login%>

<% if user_signed_in? %>
  <% if current_user.otp_required_for_login == true && !current_user.otp_validated %>
    <%= render "2fa" %>
  <% else %>
    <%= render "nav" %>
    <%= render "profile" %>
    <%= render "game" %>
    <%= render "chat" %>
    <%= render "channels"%>
    <%= render "friends"%>
    <%= render "match"%>
    <%= render "guilds"%>
    <%= render "ranking"%>
    <%= render "admin"%>
    <%= render "play" %>
    <%= render "popup" %>
    <%= render "waitchallenge" %>
    <%= render "war" %>
    <%= render "tournament" %>
  <% end %>
<% else %>
  <%= render "users/sign_in" %>
<% end %>
